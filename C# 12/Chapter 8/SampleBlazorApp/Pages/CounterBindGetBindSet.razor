@page "/counterbindgetbindset"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p>
    <input @bind:event="onchange" @bind:get="currentCount" @bind:set="IncrementCount" />
</p>

<p>
    <code>inputValue</code>: @currentCount
</p>

@code {
    private int currentCount = 0;

    private void IncrementCount(int value)
    {
        currentCount = value+1;
    }
}
